---
export interface Property {
  id: string;
  name: string;
  location: string;
  valuation: number;
  purpose: string;
  status: string;
}

interface Props {
  properties: Property[];
}

const { properties }: Props = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {properties.map((property) => (
    <div key={property.id} class="p-4 bg-white shadow rounded">
      <h3 class="font-bold text-lg">{property.name}</h3>
      <p>Localização: {property.location}</p>
      <p>Valor de Avaliação: R$ {property.valuation.toLocaleString('pt-BR')}</p>
      <p>Finalidade: {property.purpose}</p>
      <p>Status: {property.status}</p>
    </div>
  ))}
</div>