<script>
    import { onMount } from 'solid-js';
    import Chart from 'chart.js/auto';
  
    let chart;
  
    const data = {
      labels: ['2023', '2024', '2025', '2026', '2027', '2028'],
      datasets: [
        {
          label: 'Receita',
          data: [100000, 150000, 280000, 1250000, 2000000, 1800000],
          borderColor: 'rgba(61, 187, 75, 1)',
          backgroundColor: 'rgba(61, 187, 75, 0.2)',
          borderWidth: 2,
          tension: 0.4,
        },
        {
          label: 'Despesas',
          data: [300000, 400000, 500000, 600000, 700000, 800000],
          borderColor: 'rgba(187, 67, 61, 1)',
          backgroundColor: 'rgba(187, 67, 61, 0.2)',
          borderWidth: 2,
          tension: 0.4,
        },
      ],
    };
  
    const options = {
      responsive: true,
      plugins: {
        legend: {
          position: 'top',
        },
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function (value: number) {
              return 'R$ ' + value.toLocaleString('pt-BR');
            },
          },
        },
      },
    };
  
    onMount(() => {
      const canvas = document.getElementById('financialChart');
      if (canvas) {
        const ctx = (canvas as HTMLCanvasElement).getContext('2d');
        if (ctx) {
          chart = new Chart(ctx, {
            type: 'line',
            data,
            options,
          });
        }
      }
    });
  </script>
  
  <div class="p-4 bg-white shadow rounded">
    <h3 class="text-lg font-bold mb-4">Vis√£o Geral Financeira</h3>
    <canvas id="financialChart" width="400" height="200"></canvas>
  </div>